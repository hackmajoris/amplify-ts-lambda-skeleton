{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2017",
        "noImplicitAny": false,
        "allowJs": true,
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "skipLibCheck": true
    },

    "include": ["."],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts",
        "**/*.spec.ts"
    ]
}